@{
    ViewBag.Title = "ASP.net MVC Awesome Simple Demo - one page demo made, as simple as possible";
}
<h1>ASP.net MVC Awesome Simple Demo</h1>
demo showing some basic features of the awesome helpers

<h2>AjaxDropdown</h2>
@Html.Awe().AjaxDropdown("Category").Url(Url.Action("GetCategories"))
@Html.Awe().AjaxDropdown("Meal").Url(Url.Action("GetMeals")).Parent("Category")

<h2>AjaxRadioList and AjaxChecboxList</h2>
@Html.Awe().AjaxRadioList("Category1").Url(Url.Action("GetCategories"))
@Html.Awe().AjaxRadioList("Meal1").Url(Url.Action("GetMeals")).Parent("Category1")
@Html.Awe().AjaxCheckboxList("Meals").Url(Url.Action("GetMeals")).Parent("Category1")

<h2>Mods</h2>
@Html.Awe().AjaxRadioList("CategoryOdropdown").Odropdown().Url(Url.Action("GetCategories"))
@Html.Awe().AjaxRadioList("CategoryCombo").Combobox().Url(Url.Action("GetCategories"))
@Html.Awe().AjaxRadioList("Color").ColorDropdown(o => o.AutoSelectFirst())
@Html.Awe().AjaxRadioList("Time1").TimePicker(o => o.AutoSelectFirst())
<br/>
<br/>
@Html.Awe().AjaxCheckboxList("CategoriesMulti").Multiselect().Url(Url.Action("GetAllMeals")).HtmlAttributes(new { style = "width:300px;"})
<br/>
<br/>
@Html.Awe().AjaxRadioList("CategoryButtonGroup").ButtonGroup().Url(Url.Action("GetCategories"))
<br/>
<br/>

<h2>Lookup</h2>
@*using prefix lookup to get an unique html id, Meal is already used by the AjaxDropdown, an alternative would be to use a different name*@
@Html.Awe().Lookup("MealLookup").Controller("MealLookup")

<h2>MultiLookup</h2>
@Html.Awe().MultiLookup("MealsMultiLookup").Controller("MealsMultiLookup")

<h2>Autocomplete</h2>
@Html.Awe().Autocomplete("MealsAuto").Url(Url.Action("GetMealsAuto")).Placeholder("try mango, apple ...")

<h2>Datepicker</h2>
@Html.Awe().DatePicker("Date")

<h2>Timepicker</h2>
@Html.Awe().TimePicker("Time2")

<h2>Textbox</h2>

@Html.Awe().TextBox("txt1").Placeholder("text")
<br/>
<br/>
@Html.Awe().TextBox("Number").Numeric().Placeholder("number")

<h2>Grid</h2>

@(Html.Awe().Grid("DinnersGrid")
    .Mod(o => o.PageInfo().PageSize().ColumnsSelector().ColumnsAutohide())
    .Url(Url.Action("GridGetItems"))
    .Height(400)
    .Columns(
            new Column { Name = "Name" }.Mod(o => o.NoAutohide()),
            new Column { Name = "Country.Name", ClientFormat = ".CountryName", Header= "Country" },
            new Column { Name = "Chef.FirstName,Chef.LastName", ClientFormat = ".ChefName", Header="Chef" },
            new Column { Name = "Date" }
        ))

<h2>AjaxList</h2>

@Html.Awe().TextBox("searchMeal").Placeholder("search for a meal...")

<div style="min-height:400px;margin-top: 5px;">
@Html.Awe().AjaxList("mealsList").Url(Url.Action("GetMealsAjaxList")).Parent("searchMeal")
</div>

